<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Hookah_menu">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/acc_icon" android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView3" android:layout_marginEnd="113dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="173dp"
            app:layout_constraintHorizontal_bias="0.833"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choose_hookah" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="104dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" android:background="@drawable/choose_hookah_btn"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choose_other" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="280dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" android:background="@drawable/other_btn"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/choose_tabak" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="105dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"
            android:background="@drawable/tabak_btn"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/where_to_smoke"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/choose_tabak"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"
            android:background="@drawable/where_to_btn"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guides"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="35dp"
            android:background="@drawable/how_to_btn" android:layout_marginTop="196dp"
            app:layout_constraintTop_toBottomOf="@+id/choose_hookah"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about_us"
            android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/where_to_smoke"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"
            android:background="@drawable/about_btn"/>
</androidx.constraintlayout.widget.ConstraintLayout>