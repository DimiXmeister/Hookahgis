<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/Yes_Age"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:id="@+id/age_yes"
            android:background="@color/colorPrimaryDark"
            android:onClick="Age_yes"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/age_no" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="61dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="61dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:text="@string/No_Age"
            android:ems="10"
            android:textSize="24sp"
            android:id="@+id/age_no"
            android:longClickable="false" android:freezesText="true" android:textAlignment="center"
            android:onClick="Age_no" android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="62dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"/>
    <TextView
            android:text="@string/Warning"
            android:layout_width="270dp"
            android:layout_height="120dp"
            android:id="@+id/main_warning" android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginBottom="48dp"
            app:layout_constraintBottom_toTopOf="@+id/age_yes" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="71dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp"/>
    <ImageView
            android:layout_width="320dp"
            android:layout_height="320dp" app:srcCompat="@drawable/hookah_logo"
            android:id="@+id/imageView" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/main_warning" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="40dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="61dp" app:layout_constraintHorizontal_bias="0.7"
            android:contentDescription="@string/Logo"/>

</androidx.constraintlayout.widget.ConstraintLayout>